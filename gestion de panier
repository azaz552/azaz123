    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById("search");
    const searchButton = document.querySelector("button[type='search']");
    const boxes = document.querySelectorAll(".box");
    const cartIcon = document.querySelector(".fa-cart-shopping");
    let cartCount = 0;

    // Fonction de recherche
    function searchProducts() {
        const searchText = searchInput.value.toLowerCase();
        boxes.forEach(box => {
            const productName = box.querySelector("h4").innerText.toLowerCase();
            if (productName.includes(searchText)) {
                box.style.display = "block";
            } else {
                box.style.display = "none";
            }
        });
    }

    // Événement de recherche
    searchButton.addEventListener("click", searchProducts);
    searchInput.addEventListener("keyup", searchProducts);

    // Gestion du panier
    document.querySelectorAll(".box button").forEach(button => {
        button.addEventListener("click", function() {
            cartCount++;
            cartIcon.innerHTML = `<i class="fa-solid fa-cart-shopping"></i> (${cartCount})`;
        });
    });
});

    </script>
